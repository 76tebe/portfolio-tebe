---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import IndonesianFlag from "../assets/indonesia.svg";
---

<Layout title="Tebe's Portfolio">
  <svg
  class="absolute -top-[800px] -left-[320px] -z-10"
    width="947"
    height="1210"
    viewBox="0 0 947 1210"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <ellipse
      id="Ellipse 1"
      cx="473.53"
      cy="604.693"
      rx="391.966"
      ry="660.154"
      transform="rotate(-30 473.53 604.693)"
      fill="url(#paint0_radial_386_1447)"
      fill-opacity="0.5"></ellipse>
    <defs>
      <radialGradient
        id="paint0_radial_386_1447"
        cx="0"
        cy="0"
        r="1"
        gradientUnits="userSpaceOnUse"
        gradientTransform="translate(473.53 604.693) rotate(90) scale(660.154 391.966)"
      >
        <stop stop-color="#FFFFFF" stop-opacity="0.4"></stop>
        <stop offset="1" stop-color="#0F172A" stop-opacity="0"></stop>
      </radialGradient>
    </defs>
  </svg>
  <svg
    class="absolute -right-1/4 -z-10"
    width="1009"
    height="1009"
    viewBox="0 0 1009 1009"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <ellipse
      id="Ellipse 2"
      cx="504.27"
      cy="504.27"
      rx="267.952"
      ry="660.154"
      transform="rotate(-45 504.27 504.27)"
      fill="url(#paint0_radial_386_1446)"
      fill-opacity="0.5"></ellipse>
    <defs>
      <radialGradient
        id="paint0_radial_386_1446"
        cx="0"
        cy="0"
        r="1"
        gradientUnits="userSpaceOnUse"
        gradientTransform="translate(504.27 504.27) rotate(90) scale(660.154 267.952)"
      >
        <stop stop-color="#FFFFFF" stop-opacity="0.4"></stop>
        <stop offset="1" stop-color="#0F172A" stop-opacity="0"></stop>
      </radialGradient>
    </defs>
  </svg>
  <div class="flex flex-col gap-6">
    <div class="text-heading-1 flex flex-col gap-2 pt-40">
      <h1>Meet Tebe! 🙋🏼‍♂️</h1>
      <h1>a Product Designer based in Jakarta 🇮🇩</h1>
    </div>
    <p class="flex text-body-1 text-[1.5rem] gap-2">
      Previously
      <span class="text-[#E0004D]">@Halodoc</span>
    </p>
  </div>
</Layout>
